        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="sernet.verinice.model.common">

	<class name="CnATreeElement" table="cnatreeelement"
		batch-size="10"
		abstract="true">
		<id name="dbId" 
			type="java.lang.Integer" 
			column="dbId"
			unsaved-value="null">
			<generator class="native" />
		</id>
		
		
		<discriminator column="OBJECT_TYPE" type="string"/>	
		
		<property name="scopeId" 
            type="java.lang.Integer" 
            column="scope_id">
        </property>
		
		<property
			name="objectType"
			column="OBJECT_TYPE"
			insert="false"
			update="false"/>
		
		<property
			name="uuid"
			not-null="true"
			unique="true"
		/>
		
		<property name="extId"/>
		
		<property name="sourceId"/>
		
		<set name="permissions"
			inverse="true"
			cascade="all"
			batch-size="10" >
			<key column="cte_id"/>
			<one-to-many class="Permission"/>
		</set>
		
		<many-to-one 
			name="entity"
			column="entity_id"
			class="sernet.hui.common.connect.Entity"
			cascade="all"
			fetch="join"
			/>
			
		<property name="parentId" column="parent" insert="false" update="false"/>
		
		<many-to-one 
			name="parent"
			column="parent"
			class="CnATreeElement" 	
			/>
			
		<set name="children" 
			cascade="all"
			inverse="true"
			batch-size="10"
			>
			<key column="parent" />
			<one-to-many class="CnATreeElement"/>
		</set>
		
		<set name="linksDown"
			inverse="true"
			cascade="delete,delete-orphan">
			<key column="DEPENDANT_ID"/>
			<one-to-many class="CnALink"/>
		</set>
		
		<set name="linksUp"
			inverse="true"
			cascade="delete,delete-orphan">
			<key column="DEPENDENCY_ID"/>
			<one-to-many class="CnALink"/>
		</set>
        
        <set name="files"
            inverse="true"
            cascade="delete,delete-orphan"
            lazy="true">        
            <key column="cnatreeelement_id" />
            <one-to-many class="sernet.verinice.model.bsi.Attachment"/>
        </set>
        
        <property name="iconPath" column="icon" type="string" length="256"/>
        
        <property name="templateTypeValue" type="string">
            <column name="template_type" not-null="true" default="'NONE'" />
        </property>
        
		<set name="implementedTemplateUuids" table="templaterelations" lazy="false">
		    <key column="cnatreeelement_id" not-null="true" />
		    <element column="template_uuid" type="java.lang.String" not-null="true" unique="false" />
		</set>
		
